<view style="background-color: #ededed;">
  <view class="user_box">
    <view class="user_img">
      <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data class="user_name" type="userNickName"></open-data>
  </view>
  <view class="user_list">
    <view class="user_list_min" bindtap="getSession">
      <view class="user_list_icon iconfont icon-soucang"></view>
      <text style="flex-grow: 2;margin-left: 30rpx">我的收藏</text><text class="iconfont icon-xiangyou"></text>
    </view>

    <view class="user_list_min" bindtap="getUser">
      <view class="user_list_icon iconfont icon-wenda" style="font-weight: 700;"></view>
      <text style="flex-grow: 2;margin-left: 30rpx">我的问答</text><text class="iconfont icon-xiangyou"></text>
    </view>
    <view class="user_list_min" bindtap="getUser">
      <view class="user_list_icon iconfont icon-guanyuwomen"></view>
      <text style="flex-grow: 2;margin-left: 30rpx">意见反馈</text><text class="iconfont icon-xiangyou"></text>
    </view>
    <view class="user_list_min" bindtap="getUser">
      <view class="user_list_icon iconfont icon-yijianfankui"></view>
      <text style="flex-grow: 2;margin-left: 30rpx">关于我们</text><text class="iconfont icon-xiangyou"></text>
    </view>

  </view>

</view>