/* pages/user/ss/index.wxss */


/* 盒子 */
.rank_box {
  border-bottom: 1px solid #ededed;
}

.rank_item {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;

}

.img_box {
  width: 200rpx;
  height: 160rpx;
}

image {
  width: 100%;
  height: 100%;
}

.rank_deail {
  width: calc(100vw - 280rpx);
  display: flex;
  flex-direction: column;

}

.rank_title {
  font-size: 30rpx;
}

.rank_peizhi {
  font-size: 26rpx;
}

.rank_price {
  font-size: 28rpx;
  color: #f63;
}

.rank_pinjia {
  width: 128rpx;
  height: 27rpx;
  background: url(https://icon.zol-img.com.cn/wap2016/star-gray.png) 0 0;
  background-size: contain;
}

.fengshu {
  width: 100%;
  height: 100%;
  background: url(https://icon.zol-img.com.cn/wap2016/star-red.png) 0 0;
  background-size: contain;
}