/* 搜索 */
.seach {
  width: 100vw;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.seach .seach_box {
  position: relative;
  margin: 0 auto;
  width: 98%;
  height: 50rpx;
  background-color: #F4F4F4;
  border-radius: 50rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
}

.nav_top {
  position: fixed;
  top: 0rpx;
  background-color: #fff;
  z-index: 9999;
}

.input_list {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  top: 60rpx;
  left: 0;
  z-index: 999999;
}

.input_list_item {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  display: inline-block;
}