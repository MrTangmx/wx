<!--pages/product/index.wxml-->
<view class="product">
  <scroll-view scroll-y='true' class="left_list" bindtap="changeClass">
    <view wx:for="{{classify}}" class="left_item {{index == current?'white':''}}" data-index="{{index + 1}}">{{item}}
    </view>
  </scroll-view>
  <view class="right_list">
    <view class="right_item">
      <view wx:for="{{detaileArr.child}}" wx:key="{{index}}">
        <view class="right_title">{{item.hotTitles}}</view>
        <view class="item_box">
          <view class="item" wx:for="{{item.child}}" wx:key="{{index}}" data-id="{{item.id}}" bindtap="touchSkip">
            <view class="item_img">
              <image src="{{item.image}}"></image>
            </view>
            <view style="text-align: center;font-size:24rpx">{{item.name}}</view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>