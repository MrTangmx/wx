/* pages/product/ind.ex.wxss. */
.product {
  display: flex;
  height: calc(100vh - 60rpx)
}

.left_list {
  width: 180rpx;
  height: 100%;
  background-color: #ddd;
}

.left_item {
  width: 100%;
  padding: 26rpx 0;
  text-align: center;
  font-size: 31.9rpx;
}

.right_list {
  flex: 1;
  padding: 24rpx 20rpx;

}

.white {
  background-color: #fff;
}

.right_title {
  font-size: 28rpx;
  font-weight: 700;
  font-family: '微软雅黑';
}

.item_box {
  display: flex;
  flex-wrap: wrap;
}

.item_box .item {
  width: 30%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
  box-sizing: border-box;
  margin: 0 8rpx;
}

.item .item_img {
  height: 82rpx;
}

image {
  width: 100%;
  height: 100%;
}