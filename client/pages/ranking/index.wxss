/* 搜索 */
.seach {
  width: 100vw;
  height: 60rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.seach .seach_box {
  position: relative;
  margin: 0 auto;
  width: 98%;
  height: 50rpx;
  background-color: #F4F4F4;
  border-radius: 50rpx;
  padding: 0 20rpx;
  line-height: 50rpx;
}

.nav_top {
  position: fixed;
  top: 0rpx;
  background-color: #fff;
  z-index: 9999;
}

.input_list {
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  top: 60rpx;
  left: 0;
  z-index: 999999;
}

.input_list_item {
  width: 100%;
  height: 60rpx;
  font-size: 28rpx;
  padding: 0 10rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  display: inline-block;
}

/* 盒子 */
.rank_box {
  border-bottom: 1px solid #ededed;
}

.rank_item {
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  padding: 20rpx;
  display: flex;
  border-bottom: 1px solid #ededed;
}

.img_box {
  width: 200rpx;
  height: 160rpx;
}

image {
  width: 100%;
  height: 100%;
}

.rank_deail {
  width: calc(100vw - 280rpx);
  display: flex;
  flex-direction: column;

}

.rank_title {
  font-size: 30rpx;
}

.rank_peizhi {
  font-size: 26rpx;
  height: 46rpx;
}

.rank_price {
  font-size: 28rpx;
  color: #f63;
}

.rank_pinjia {
  width: 128rpx;
  height: 27rpx;
  background: url(https://icon.zol-img.com.cn/wap2016/star-gray.png) 0 0;
  background-size: contain;
}

.fengshu {
  width: 100%;
  height: 100%;
  background: url(https://icon.zol-img.com.cn/wap2016/star-red.png) 0 0;
  background-size: contain;
}