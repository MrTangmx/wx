/* components/list.wxss */
.list_box {
  width: calc(100vw - 30rpx);
  height: 270rpx;
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #eee
}

.img_box {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
}

.img_box .img_item {
  width: 30%;
  height: 180rpx;
}

.img_ceping_box {
  width: calc(100vw - 30rpx);
  height: 350rpx;
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #eee;
}

.img_box .img_ceping_item {
  width: 65%;
  height: 255rpx;
}

.img_box .img_tushang_item {
  width: 100%;
  height: 125rpx;
}

.list_one_box {
  width: calc(100vw - 30rpx);
  height: 180rpx;
  padding: 20rpx 15rpx;
  border-bottom: 1px solid #eee;
  display: flex;

}

.list_box_left {
  width: 60%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list_box_right {
  width: 40%;
  height: 100%;
  display: flex;
  align-items: center;
}

.img_one_item {
  width: 100%;
  height: 90%;
}